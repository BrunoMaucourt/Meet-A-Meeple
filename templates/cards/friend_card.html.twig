				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_empty.svg') }}" alt="">
            {% endif %}
            {% if user['rate'] >= 1 and user['rate'] < 2 %}
				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_full.svg') }}" alt="">
				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_empty.svg') }}" alt="">
				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_empty.svg') }}" alt="">
				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_empty.svg') }}" alt="">
				<img class="h-1/2" src="{{ asset('img/content/meeple_rate_empty.svg') }}" alt="">
