<div class="group recommended_friend_card w-60 sm:w-72 h-96 shadow-xl bg-gradient-to-br from-white via-white to-main-orange/20 rounded-md snap-center shrink-0 overflow-hidden border-b-4 border-main-emerald sm:hover:scale-105 transition-all duration-300">
	<div class="h-2/5 group-odd:bg-gradient-to-r group-even:bg-gradient-to-l from-main-orange/20 to-main-green/20 flex">
		<div class="w-1/2 h-full flex justify-center items-center p-4 overflow-hidden">
            <div class="h-20 w-20 sm:w-28 sm:h-28 border rounded-full bg-center bg-cover" style="background-image: url('{{ asset(user['picture_profil']) }}');"></div>
		</div>
		<div class="w-1/2 h-full flex flex-col gap-2 justify-center p-2">
			<div class="flex items-center gap-2">
				<img class="w-1/6" src="{{ asset('img/profil_menu/person.svg') }}" alt="">
				<span>{{ user['last_name'] }} {{ user['first_name'] }}</span>
			</div>
			<div class="flex items-center gap-2">
				<img class="w-1/6" src="{{ asset('img/content/birthday.svg') }}" alt="">
				<span>
                    {{ user['birthdate'] }}
                </span>
			</div>
			<div class="flex items-center gap-2">
				<img class="w-1/6" src="{{ asset('img/content/location.svg') }}" alt="">
				<span>
                    {{ user['city'] }}
                </span>
			</div>
		</div>
	</div>
	<div class="flex flex-col h-3/5 p-2">
		<div class="w-full h-1/5 flex justify-between items-center">
			<div class="w-full flex justify-start items-center pl-4">
				<a href="">{{ user['number_comment'] }} avis</a>
			</div>
