{% extends 'base.html.twig' %}

{% block title %}
	Mes amis
{% endblock title %}

{% block withdashboard %}{% endblock withdashboard %}

{% block bonus_javascript %}
	<script defer src="{{ asset('js/contact_slider.js') }}"></script>
{% endblock bonus_javascript %}

{% block main_content %}
	<h1 class="text-2xl sm:text-3xl text-main-orange font-bold ml-2 sm:ml-4">
		Mes contacts
	</h1>

	<section
		class="text-sm md:text-base w-full flex flex-col gap-8 items-center justify-center px-2 sm:px-4 mb-20">
		<!-- START Friend PLAYER-->
    <div class="flex justify-between items-center w-full mt-8 border-b border-main-grey py-2">
        <h2 class="text-xl font-bold">Mes utilisateurs favoris</h2>
        <div class="hidden sm:flex gap-5">
            <div id="recommended_friend_prev_btn" class="flex justify-center items-center cursor-pointer w-8 h-8 rounded-full border-2 border-main-green text-main-green hover:bg-main-green/20 transition-all duration-300"><</div>
            <div id="recommended_friend_next_btn" class="flex justify-center items-center cursor-pointer w-8 h-8 rounded-full border-2 border-main-green text-main-green hover:bg-main-green/20 transition-all duration-300">></div>
        </div>
    </div>
		
		<div id="recommended_friend_slider_container" class="relative w-full flex items-center snap-x snap-mandatory overflow-x-scroll scroll-smooth gap-8 px-6 sm:px-2 py-4">
			{% if userFriendResult != [] %}
				{% for user in userFriendResult %}
					{% include('/cards/friend_card.html.twig') %}
				{% endfor %}
			{% else %}
				<p>
					Vous n'avez pas d'utilisateurs favoris.
				</p>
			{% endif %}
		</div> 
		<!-- END Friend PLAYER -->  

		<!-- START Banned PLAYER-->
		<div class="flex justify-between items-center w-full mt-8 border-b border-main-grey py-2">
			<h2 class="text-xl font-bold">Mes utilisateurs bannis</h2>
			<div class="hidden sm:flex gap-5">
				<div id="recommended_banned_prev_btn" class="flex justify-center items-center cursor-pointer w-8 h-8 rounded-full border-2 border-main-green text-main-green hover:bg-main-green/20 transition-all duration-300"><</div>
				<div id="recommended_banned_next_btn" class="flex justify-center items-center cursor-pointer w-8 h-8 rounded-full border-2 border-main-green text-main-green hover:bg-main-green/20 transition-all duration-300">></div>
			</div>
		</div>

		<div id="recommended_banned_slider_container" class="relative w-full flex items-center snap-x snap-mandatory overflow-x-scroll scroll-smooth gap-8 px-6 sm:px-2 py-4">
			{% if userBannedResult != [] %}
				{% for user in userBannedResult %}
					{% include('/cards/banned_card.html.twig') %}
				{% endfor %}
			{% else %}
				<p>
					Vous n'avez pas d'utilisateurs bannis.
				</p>
			{% endif %}
		</div>
		<!-- END Banned PLAYER -->
	</section>
{% endblock main_content %}
